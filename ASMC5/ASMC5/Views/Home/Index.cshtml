@model List<FoodModel>



<div class="container-fluid mb-5">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                <h6 class="m-0">Categories</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            <nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" id="navbar-vertical">
                <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">
                    @{ if (ViewBag.UserName != null)
                        {
                            if (ViewBag.Role == 1)
                            {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link" data-toggle="dropdown">Quản lý User và Food <i class="fa fa-angle-down float-right mt-1"></i></a>
                                    <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="UserModel" asp-action="Index">Quản lý</a>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="FoodModel" asp-action="Index">Món Ăn</a>
                                    </div>
                                </div>
                            }
                        }
                    }

                <a href="" class="nav-item nav-link">Hamburger</a>
                <a href="" class="nav-item nav-link">Bread</a>
                <a href="" class="nav-item nav-link">Noodle Soup</a>
                <a href="" class="nav-item nav-link">Desserts</a>
                <a href="" class="nav-item nav-link">Beverages</a>
                    <!--<-->@*a href="" class="nav-item nav-link">Jumpsuits</a>
                    <a href="" class="nav-item nav-link">Blazers</a>
                    <a href="" class="nav-item nav-link">Jackets</a>
                    <a href="" class="nav-item nav-link">Shoes</a>*@
                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a class="text-decoration-none nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link  text-decoration-none dropdown-item" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                        @*<a href="Details.cshtml" class="nav-item nav-link">Shop Detail</a>*@
                    <a class="nav-link  text-decoration-none dropdown-item" asp-area="" asp-controller="Home" asp-action="Details">Shop Detail</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a class="nav-link  text-decoration-none dropdown-item" asp-area="" asp-controller="Home" asp-action="Cart">Shopping Cart</a>
                                <a class="nav-link  text-decoration-none dropdown-item" asp-area="" asp-controller="Home" asp-action="CheckOut">Checkout</a>
                            </div>
                        </div>
                        <a class="nav-link  text-decoration-none dropdown-item" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0">
                        @{if (ViewBag.UserName != null)
                            {
                            <a class="nav-link  text-decoration-none dropdown-item">@ViewBag.UserName</a>
                            <a class="nav-link  text-decoration-none dropdown-item" asp-area="" asp-controller="Admin" asp-action="Logout">Logout</a>
                            }
                            else
                            {
                            <a class="nav-link  text-decoration-none dropdown-item" asp-area="" asp-controller="Admin" asp-action="Login">Login</a>
                            <a class="nav-link  text-decoration-none dropdown-item" asp-area="" asp-controller="UserModel" asp-action="Register">Register</a>
                                }
                            }


                    </div>
                </div>
            </nav>
            <div id="header-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active" style="height: 410px;">
                        <img class="img-fluid" src="~/img/banner1.jpg" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h4 class="text-light text-uppercase font-weight-medium mb-3">10% Off Your First Order</h4>
                                <h3 class="display-4 text-white font-weight-semi-bold mb-4">Fastfood</h3>
                                <a href="" class="btn btn-light py-2 px-3">Shop Now</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" style="height: 410px;">
                        <img class="img-fluid" src="~/img/banner2.jpg" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h4 class="text-light text-uppercase font-weight-medium mb-3">10% Off Your First Order</h4>
                                <h3 class="display-4 text-white font-weight-semi-bold mb-4">Desserts</h3>
                                <a href="" class="btn btn-light py-2 px-3">Shop Now</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" style="height: 410px;">
                        <img class="img-fluid" src="~/img/banner3.jpg" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h4 class="text-light text-uppercase font-weight-medium mb-3">10% Off Your First Order</h4>
                                <h3 class="display-4 text-white font-weight-semi-bold mb-4">Reasonable Price</h3>
                                <a href="" class="btn btn-light py-2 px-3">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-prev-icon mb-n2"></span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-next-icon mb-n2"></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Just Arrived</span></h2>
    </div>

    <div class="row px-xl-5 pb-3">
        @foreach (var food in Model)
        {

            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="img-fluid w-100" src="~/img/@food.Image" alt="">
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@food.TenMonAn</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@food.GiaMonAn.ToString("#,##0") VNĐ</h6><h6 class="text-muted ml-2"></h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a class="nav-link text-dark btn btn-sm text-dark p-0" asp-area="" asp-controller="Home" asp-action="Details"  asp-route-id="@food.MonAnId"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                    </div>
                </div>
            </div>

        }
    </div>

</div>
