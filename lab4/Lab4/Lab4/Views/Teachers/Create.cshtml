@model Lab4.Models.Teacher

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Teacher</h1>
<hr />
<div class="col-lg-12 m-auto">
    <div class="card">
        <div class="card-header bg-primary text-uppercase font-weight-bold text-white">
            <i class="fas fa-edit"></i> STUDENT INFORMATION
        </div>
        <hr />
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Skills" class="control-label"></label>
                        <input asp-for="Skills" class="form-control" />
                        <span asp-validation-for="Skills" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="TotalStudents" class="control-label"></label>
                        <input asp-for="TotalStudents" class="form-control" />
                        <span asp-validation-for="TotalStudents" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Salary" class="control-label"></label>
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="AddOn" class="control-label"></label>
                        <input asp-for="AddOn" type="date" class="form-control" />
                        <span asp-validation-for="AddOn" class="text-danger"></span>

                    </div>
                </div>

                    <div class="form-group col-3">
                        <input type="submit" value="Create" class="btn btn-primary text-white " />
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
        </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
