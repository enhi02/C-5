@model Lab402.Models.Employee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="col-lg-8 m-auto">
    <div class="card">
        <div class="card-header bg-primary text-uppercase font-weight-bold text-white">
            <i class="fas fa-edit"></i> STUDENT INFORMATION
        </div>
        <hr />
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-12">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="EmpCode" class="control-label"></label>
                        <input asp-for="EmpCode" class="form-control" />
                        <span asp-validation-for="EmpCode" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-12">
                        <label asp-for="OfficeLocation" class="control-label"></label>
                        <input asp-for="OfficeLocation" class="form-control" />
                        <span asp-validation-for="OfficeLocation" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-6">
                        <button type="submit" value="Create" class="btn btn-primary btn-lg btn-block text-white">
                            Create
                        </button>
                    </div>
                    <div class="form-group col-6">
                        <a asp-controller="Employees" asp-action="Index">
                            <button type="button" class="btn btn-secondary btn-lg text-white btn-block">
                                Back to List
                            </button>
                        </a>

                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
